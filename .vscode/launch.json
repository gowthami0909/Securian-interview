{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug WebdriverIO Tests",
            "program": "${workspaceFolder}/node_modules/.bin/wdio",
            "args": ["--spec", "./test/specs/*.spec.js", "--inspect-brk"],
            "autoAttachChildProcesses": true,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}